digraph isa_core_diagram {

    ratio=fill;
    node [shape=Mrecord];
    edge [arrowhead=crow arrowtail=none dir=both label=""];

    subgraph cluster_legacy {

        label="legacy";

        project [label="{project|\
        id [PK:serial] |\
        funding [text]|\
        description [text:HIDE]|\
        url [text]|\
        name [text]|\
        abstract [markdown]
        }"];

        dataset [label="{dataset|\
        id [PK:serial]|\
        accession [PK:text]|\
        pubmed_id [text]|\
        title [text]|\
        project [FK]|\
        funding [text]|\
        summary [text]|\
        description [markdown]|\
        thumbnail [bigint]|\
        experiment_type [V]|\
        study_design [markdown]|\
        release_date [date]|\
        status [FK]
        }"];

        person [label="{person|\
        name [text]|\
        first_name [text:HIDE]|\
        middle_name [text:HIDE]|\
        last_name [text:HIDE]|\
        email [text:HIDE]|\
        degrees [text:HIDE]|\
        affiliation [text]|\
        website [text]
        }"];

        /* NOT IMPLEMENTED YET
        publication [label="{publication|\
        id [PK:serial]|\
        project [FK]|\
        dataset [FK]|\
        pubmed_id [UNIQUE:text]|\
        doi [UNIQUE:text]|\
        url [text]|\
        title [text]|\
        abstract [text]|\
        status [V]
        }"];
        dataset -> publication
        */

        file [label="{file|\
        id [PK:serial]|\
        filename [text]|\
        uri [PK:text]|\
        content_type [text]|\
        bytes [bigint]|\
        description [text]|\
        timestamp [timestamptz]|\
        dataset [int:FK]|\
        checksum_type [text]|\
        checksum [text]|\
        ark [text]
        }"];

        project -> dataset
        project -> { project_member project_investigator} [arrowhead=none arrowtail=crow];
        project_member -> person;
        project_investigator -> person;
        dataset -> file;
        {rank=same; project dataset}
    }

    subgraph cluster_isa {

        label="isa";

        sample [label="{sample|\
        id [PK:serial]|\
        accession [PK:text]|\
        dataset [FK]|\
        replicate [int]|\
        species [V]|\
        strain [V]|\
        gender [V]|\
        genotype [V]|\
        mutation [V]|\
        gene [V]|\
        age_stage [V]|\
        anatomy [V]|\
        origin [V:TBD]|\
        specimen [V]|\
        phenotype [V]|\
        litter [V]|\
        collection_date|\
        local_identifier|\
        clinical [FK]|\
        enhancer [FK]
        }"];

        clinical [label="{clinical|\
        id [PK:serial]|\
        age|\
        height|\
        weight|\
        head_circumference|\
        OMIM_diagnosis (V:OMIM)|\
        OMIM_code (V:OMIM)|\
        ICD10_diagnosis (V:ICD10)|\
        ICD10_code (V:ICD10)|\
        molecular_cytogenetic_diagnosis [V]|\
        diagnostic_evidence_notes
        }"]; 

        enhancer [label="{enhancer|\
        id [PK serial] |\
        original_species_assembly [text] |\
        original_species_chromosome [text] |\
        original_species_start [int] |\
        original_species_end [int] |\
        visualization_assembly [text] |\
        visualization_assembly_chromosome [text] |\
        visualization_assembly_start [int] |\
        visualization_assembly_end [int] |\
        other_assembly [text] |\
        other_assembly_chromosome [text] |\
        other_assembly_start [int] |\
        other_assembly_end [int] |\
        tested_sequence [text] |\
        tested_sequence_flag [text] |\
        list_of_closest_genes [V] |\
        external_database_name [text] |\
        external_id [text] |\
        list_of_anatomical_structures [V] |\
        lab_internal_reference [text]
        }"]

        sample -> {clinical enhancer} [arrowtail=none arrowhead=teedot];

        image [label="{image|\
        id [PK:serial]|\
        accession [PK:text]|\
        dataset [FK]|\
        sample [FK]|\
        thumbnail_uri [FK]|\
        file [FK]|\
        caption [text]|\
        intent [V]|\
        modality [V]|\
        equipment_model [V]|\
        dimensions [(x,y)]
        }"];

        volume [label="{volume|\
        id [PK:serial]|\
        accession [PK:text]|\
        dataset [FK]|\
        sample [FK]|\
        thumbnail_uri [FK]|\
        file [FK]|\
        caption [text]|\
        intent [V]|\
        modality [V]|\
        equipment_model [V]|\
        dimensions [(x,y,z)]
        }"];

        assay [label="{assay|\
        id [PK:serial]|\
        accession [PK:text]|\
        dataset [FK]|\
        sample [FK]|\
        replicate [int]|\
        molecule_type |\
        sample_composition |\
        sample_type |\
        sample_purification |\
        markers |\
        isolation_protocol |\
        cell_count |\
        protocol |\
        pretreatment |\
        fragmentation_method |\
        reagent |\
        reagent_source |\
        reagent_catalog_number |\
        reagent_batch_number |\
        selection
        }"]

        library [label="{library|\
        id [PK] |\
        assay [FK] |\
        library_type |\
        single_paired_end_sequencing |\
        library_adapters |\
        pcr_cycles |\
        library_yield |\
        size_selection |\
        platform
        }"]

        alignment [label="{alignment|\
        id [PK] |\
        assay [FK] |\
        aligner |\
        aligner_version |\
        aligner_flags |\
        reference_genome |\
        transcriptome_model |\
        sequence_trimming |\
        trimmed_seqs |\
        trimming_method |\
        duplicate_removal |\
        prealign_seq_removal
        }"]

        assay_file [label="{assay_file|\
        assay [FK]|\
        file [FK]
        }"];

        assay -> { library alignment assay_file };
        assay_file -> file [arrowhead=none arrowtail=crow];
        image -> file [arrowtail=none,arrowhead=teedot];
        volume -> file [arrowtail=none,arrowhead=teedot];
        { rank=same; assay image volume }
    }

    subgraph cluster_vocab {

        label="vocabulary";

        gene_summary [label="{gene_summary|\
        id [serial:PK]|\
        species [int:FK]|\
        gene [int:FK]|\
        project [int:FK]|\
        summary [markdown]|\
        UNIQUE (species, gene)
        }"];

        gene [label="{gene|\
        chado columns...
        }"];

        gene -> gene_summary;
    }

    dataset -> {sample assay image volume};
    sample -> {assay image volume};
}

